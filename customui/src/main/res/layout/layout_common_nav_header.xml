<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/nav_button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/nav_image_left"
            android:layout_width="@dimen/nav_button_image_size"
            android:layout_height="@dimen/nav_button_image_size"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/nav_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/nav_button_text_size"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/nav_button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/nav_image_right"
            android:layout_width="@dimen/nav_button_image_size"
            android:layout_height="@dimen/nav_button_image_size"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/nav_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/nav_button_text_size"/>

    </LinearLayout>

</RelativeLayout>
