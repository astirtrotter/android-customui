<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/nav_button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground"
        android:padding="8dp">

        <ImageView
            android:id="@+id/nav_image_left"
            android:layout_width="@dimen/nav_button_image_size"
            android:layout_height="@dimen/nav_button_image_size"
            android:scaleType="centerInside"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/nav_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/nav_button_text_size"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/nav_text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/nav_header_text_size"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/nav_button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground"
        tools:ignore="RelativeOverlap"
        android:padding="8dp">

        <ImageView
            android:id="@+id/nav_image_right"
            android:layout_width="@dimen/nav_button_image_size"
            android:layout_height="@dimen/nav_button_image_size"
            android:scaleType="centerInside"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/nav_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/nav_button_text_size"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>
